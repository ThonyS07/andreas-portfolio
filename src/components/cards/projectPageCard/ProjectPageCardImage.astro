---
import React from "react";
import type { ImageMetadata } from "astro";

const { image } = Astro.props as { image: ImageMetadata};
---

<div>
	<div class='block l:hidden xl:hidden'>
		<img src={image.src} alt='projectImage' />
	</div>
	<div class='hidden l:block xl:hidden'>
		<img src={image.src} alt='projectImage' />
	</div>
	<div class='hidden xl:block'>
		<img src={image.src} alt='projectImage' />
	</div>
</div>
