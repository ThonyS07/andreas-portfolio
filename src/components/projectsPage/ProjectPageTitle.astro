---
import { HeaderBl1, HeaderBl2, HeaderBl4 } from "../../format/BlackTypography";
import { HeaderL6, TextL1 } from "../../format/LightTypography";
import React from "react";

type Props = {
	title: string | React.ReactNode;
};

const { title } = Astro.props as Props;
---

<div>
	<div class='flex flex-col w-full m-0 gap-2'>
		<div class='md:hidden flex flex-row gap-5 dark:text-white text-negro3'>
			<HeaderBl4>{title}</HeaderBl4>
		</div>

		<div class='hidden md:flex lg:hidden flex-col dark:text-white text-negro3'>
			<HeaderBl2>{title}</HeaderBl2>
		</div>

		<div class='hidden lg:flex lg:flex-row gap-5 dark:text-white text-negro3'>
			<HeaderBl1>{title}</HeaderBl1>
		</div>
		<div class='md:hidden text-purple1'>
			<TextL1>Trabajo UX/UI</TextL1>
		</div>
		<div class='hidden md:flex text-purple1'>
			<HeaderL6>Trabajo UX/UI</HeaderL6>
		</div>
	</div>
</div>
